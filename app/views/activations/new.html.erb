<div class="grid_12">
  <h2 id="page-heading">Account Activation</h2>
</div>

<div class="grid_1">&nbsp;</div>

<div class="grid_5 ">

<p style="color: green"><%= flash[:notice] %></p>

  <fieldset class="login">
    Just one more thing - please pick a password that you'll use the next time you log in.
  <%= form_for @user, :url => activate_path(@user.id), :html => { :method => :post } do |form| %>
  	<%= form.error_messages %>
  	<%= render :partial => "form", :locals => { :form => form }%>
  	<%= form.submit "Activate", :class => "login button" %>
  <% end %>
  </fieldset>


</div>


