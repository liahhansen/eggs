<div id="" class="grid_12 ">
  <h2 id="page-heading">Update your Member information</h2>    

<p style="color: green"><%= flash[:notice] %></p>

<div class="grid_6">

  <%= form_for(@user) do |f| %>
    <%= hidden_field_tag :farm_id, @farm.id %>

    <%= f.error_messages :header_message => "Update failed",
                            :message => "You'll need to fix the following fields:",
                            :header_tag => :h4 %>

    <fieldset class="login">
      <legend>Member Info</legend>

    <p>
      <label>Email</label>
      <%= f.text_field :email %>
    </p>

    <%= f.fields_for :member do |member_fields| %>

      <p>
        <label>First Name</label>
        <%= member_fields.text_field :first_name, :size => "20" %>
      </p>

      <p>
        <label>Last Name</label>
        <%= member_fields.text_field :last_name, :size => "20" %>
      </p>

      <p>
        <i>If your Paypal account is under a different email address, enter it here:</i>
        <label>Alternate email</label>
        <%= member_fields.text_field :alternate_email %>
      </p>

      <p>
        <label>Address</label>
        <%= member_fields.text_area :address, :size => "30x3" %>
      </p>

      <p>
        <label>Phone number</label>
        <%= member_fields.text_field :phone_number %>
      </p>

    <% end %>

    <i>Leave password blank to remain the same</i>

    <p>
      <label>Password</label>
      <%= f.password_field :password %>
    </p>
    <p>
      <label>Confirm Password</label>
      <%= f.password_field :password_confirmation %>
    </p>

    <%= f.submit 'Update', :class => "login button" %>
    <%= link_to ' Cancel', @user %>

    </fieldset>

  <% end %>
</div>

</div>