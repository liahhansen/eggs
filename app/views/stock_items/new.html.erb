<h1>New stock_item</h1>

<% form_for(@stock_item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= select("stock_item", "delivery_id", Delivery.all.map {|o| [ "#{o.name} - #{o.date}", o.id ]})%>
  </p>
  <p>
    <%= select("stock_item", "product_id", Product.all.map {|o| [ o.name, o.id ]})%>

  </p>
  <p>
    <%= f.label :max_quantity_per_member %><br />
    <%= f.text_field :max_quantity_per_member %>
  </p>
  <p>
    <%= f.label :quantity_available %><br />
    <%= f.text_field :quantity_available %>
  </p>
  <p>
    <%= f.label :substitutions_available %><br />
    <%= f.text_field :substitutions_available %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', stock_items_path %>