<% title "Login" %>

<div class="grid_1">&nbsp;</div>
<div class="block grid_5" id="login-forms">
  <p style="color: green"><%= flash[:notice] %></p>
  <%= form_for @user_session do |form| %>

  <fieldset class="login">
    <legend>Login</legend>
    <p class="notice">Login to access your account.</p>

    <%= form.error_messages :header_message => "Login failed",
                            :message => "You'll need to fix the following fields:",
                            :header_tag => :h4 %>
    <%= form.hidden_field :remember_me, :value => true %>
    <p>
      <label>Email</label>
      <%= form.text_field :email %>
    </p>
    <p>
      <label>Password</label>
      <%= form.password_field :password %>
    </p>
    <%= form.submit "Login", :class => "login button" %>

  </fieldset>

  <% end %>


  <div><%= link_to "Forgot your password?", new_password_reset_path %></div>
  <div><%= link_to "Resend activation email?", new_activation_reset_path %></div>

</div>
