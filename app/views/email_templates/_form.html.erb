<div>
  <%= form_for(@email_template) do |f| %>
    <%= f.error_messages %>
    <%= f.hidden_field :farm_id, :value => @farm.id %>
    <%= hidden_field_tag :farm_id, @farm.id %>

    <p>
      <label>Email Template Name (required)</label><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <label>Identifier (for application use)</label><br/>
      <%= f.text_field :identifier %>
    </p>
    <p>
      <%= f.label :from %> (required)<br/>
      <%= f.text_field :from %>
    </p>

    <p>
      <%= f.label :bcc %><br/>
      <%= f.text_field :bcc %>
    </p>

    <p>
      <%= f.label :cc %><br/>
      <%= f.text_field :cc %>
    </p>

    <p>
      <%= f.label :subject %> (required)<br/>
      <%= f.text_field :subject, :size => '70' %>
    </p>
    <p>
      <%= f.label :body %> (required)<br/>
      <%= f.text_area :body, :size => '90x40' %>
    </p>
    <p>
      <label>Notes: (Object access, etc.  Won't show in email)</label><br/>
      <%= f.text_area :notes, :size => '40x8' %>
    </p>

    <p>
      <%= f.submit 'Submit' %>
    </p>
  <% end %>
</div>
