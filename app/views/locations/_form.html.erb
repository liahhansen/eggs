<%= form_for(@location) do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag :farm_id, @farm.id %>
  <%= f.hidden_field :farm_id, :value => @farm.id %>

  <p>
    Location <%= f.label :name %> (e.g. "SF / Potrero")<br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :host_name %><br />
    <%= f.text_field :host_name %>
  </p>
  <p>
    <%= f.label :host_phone %><br />
    <%= f.text_field :host_phone %>
  </p>
  <p>
    <%= f.label :host_email %><br />
    <%= f.text_field :host_email %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_area :address, :size => "30x2" %>
  </p>
  <p>
    <%= f.label :time_window %> (e.g. "5-7pm")<br />
    <%= f.text_field :time_window %>
  </p>
  <p>
    <%= f.label :label_color %><br/>
    <%= f.text_field :label_color %>
  </p>
  <p>
    <%= f.label :notes %> (e.g. "Access is through the side garage door")<br />
    <%= f.text_area :notes, :size => "40x5"%>
  </p>
  <p>
    <%= f.submit button_label %>
  </p>
<% end %>
